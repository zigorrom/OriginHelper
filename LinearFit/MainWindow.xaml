<Window x:Class="LinearFit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <d3:ChartPlotter>
            <d3:Header>
                <TextBlock HorizontalAlignment="Center" FontSize="14">Header</TextBlock> 
            </d3:Header>
            <d3:MarkerPointsGraph Name="markers" />
            <d3:LineGraph Name="line" d3:Legend.VisibleInLegend="True" Stroke="Green" />
            <d3:LineGraph Name="linearFit" d3:Legend.VisibleInLegend="True" Stroke="Black"/>
            <d3:VerticalLine Name="v1" Stroke="Red" StrokeThickness="2"/> 
            <d3:VerticalLine Name="v2" Stroke="Red" StrokeThickness="2"/>
        </d3:ChartPlotter>
        
    </Grid>
</Window>
